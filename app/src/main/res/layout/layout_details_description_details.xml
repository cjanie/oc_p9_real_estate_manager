<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/icon_surface"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/surface_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding"
        android:text="@string/surface"
        style="@style/label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/icon_surface"
        app:layout_constraintTop_toTopOf="@+id/icon_surface" />

    <TextView
        android:id="@+id/surface_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/icon_surface"
        app:layout_constraintEnd_toEndOf="@id/surface_title"
        app:layout_constraintStart_toStartOf="@id/surface_title"
        app:layout_constraintTop_toBottomOf="@+id/surface_title" />

    <Space
        android:id="@+id/space_1"
        android:layout_width="@dimen/padding"
        android:layout_height="@dimen/padding"
        app:layout_constraintTop_toBottomOf="@id/icon_surface"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/icon_rooms"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space_1" />

    <TextView
        android:id="@+id/rooms_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding"
        android:text="@string/number_of_rooms"
        style="@style/label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/icon_rooms"
        app:layout_constraintTop_toTopOf="@+id/icon_rooms" />

    <TextView
        android:id="@+id/rooms_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/icon_rooms"
        app:layout_constraintEnd_toEndOf="@id/rooms_title"
        app:layout_constraintStart_toStartOf="@id/rooms_title"
        app:layout_constraintTop_toBottomOf="@+id/rooms_title" />

    <Space
        android:id="@+id/space_2"
        android:layout_width="@dimen/padding"
        android:layout_height="@dimen/padding"
        app:layout_constraintTop_toBottomOf="@id/icon_rooms"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/icon_bathrooms"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/space_2" />

    <TextView
        android:id="@+id/bathrooms_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding"
        android:text="@string/number_of_bathrooms"
        style="@style/label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/icon_bathrooms"
        app:layout_constraintTop_toTopOf="@+id/icon_bathrooms" />

    <TextView
        android:id="@+id/bathrooms_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/icon_bathrooms"
        app:layout_constraintEnd_toEndOf="@id/bathrooms_title"
        app:layout_constraintStart_toStartOf="@id/bathrooms_title"
        app:layout_constraintTop_toBottomOf="@+id/bathrooms_title" />

    <Space
        android:id="@+id/space_3"
        android:layout_width="@dimen/padding"
        android:layout_height="@dimen/padding"
        app:layout_constraintTop_toBottomOf="@id/icon_bathrooms"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/icon_bedrooms"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space_3" />

    <TextView
        android:id="@+id/bedrooms_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding"
        android:text="@string/number_of_bedrooms"
        style="@style/label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/icon_bedrooms"
        app:layout_constraintTop_toTopOf="@+id/icon_bedrooms" />

    <TextView
        android:id="@+id/bedrooms_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/icon_bedrooms"
        app:layout_constraintEnd_toEndOf="@id/bedrooms_title"
        app:layout_constraintStart_toStartOf="@id/bedrooms_title"
        app:layout_constraintTop_toBottomOf="@+id/bedrooms_title" />

</androidx.constraintlayout.widget.ConstraintLayout>